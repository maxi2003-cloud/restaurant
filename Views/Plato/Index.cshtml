@model IEnumerable<Restaurante.Models.Plato>

@{
    ViewData["Title"] = "Nuestros Platos";
}


<section class="page-section bg-primary" id="about">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-lg-8 text-center">
                <h1 class="text-white mt-0">Platos</h1>
                <hr class="divider divider-light" />
                <p class="text-white-75 mb-4">A continuación la lista de los platos que tenemos disponibles y la gestión de los mismos</p>
                <a class="btn btn-light btn-xl" asp-action="Create">Agregar uno nuevo</a>
            </div>
        </div>
    </div>
</section>

<div class="container">
    <br>
    <h3>Nuestros platos</h3>
    <br>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre_Plato)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Observacion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Precio)
                </th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre_Plato)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Observacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PlatoId">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.PlatoId">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.PlatoId">Eliminar</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>